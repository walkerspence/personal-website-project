  <tr>
    <td>{{ board.[0].[0] }}</td>
    <td class="vert">{{ board.[0].[1] }}</td>
    <td>{{ board.[0].[2] }}</td>
  </tr>
  <tr>
    <td class="hori">{{ board.[1].[0] }}</td>
    <td class="vert hori">{{ board.[1].[1] }}</td>
    <td class="hori">{{ board.[1].[2] }}</td>
  </tr>
  <tr>
    <td>{{ board.[2].[0] }}</td>
    <td class="vert">{{ board.[2].[1] }}</td>
    <td>{{ board.[2].[2] }}</td>
  </tr>
</table>

